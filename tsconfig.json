{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@ui/*": ["src/components/ui/*"],
      "@lib/*": ["src/lib/*"],
      "@utils/*": ["src/lib/utils/*"],
      "@config/*": ["src/lib/config/*"],
      "@context/*": ["src/context/*"],
      "@constants/*": ["src/lib/constants/*"],
      "@interfaces/*": ["src/lib/interfaces/*"],
      "@types/*": ["src/lib/types/*"],
      "@hooks/*": ["src/hooks/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "scripts/generateTestimonials.mjs",
    "scripts/generateTestimonials.js",
    "scripts/generateTestimonials.mts",
    "src/lib/constants/info/restaruants.js",
    "scripts/create-city-folders.mts"
  ],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
